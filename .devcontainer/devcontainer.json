{
    "name": "DUMB-Docs Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.14",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    "forwardPorts": [8000],
    "portsAttributes": {
        "8000": {
            "label": "Zensical",
            "onAutoForward": "openBrowser"
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "runArgs": [
        "--name=dumb_docs",
        "--hostname=dumb_docs",
        "--dns=8.8.8.8",
        "--dns=8.8.4.4"
    ],
    "remoteEnv": {
        "WATCHFILES_FORCE_POLLING": "true",
        "WATCHFILES_POLL_DELAY_MS": "200"
    },
    "postCreateCommand": "bash ./.devcontainer/init.sh",
    "postStartCommand": "rm -rf .cache site && zensical serve --dev-addr 0.0.0.0:8000",
    "remoteUser": "vscode"
}
